# Frontend Environment Variables - Example
# Copy this file to .env and customize for your environment

# API Configuration
# For local development: http://localhost:3001
# For production: https://api.yourdomain.com or relative URL
VITE_API_URL=http://localhost:3001

# Use relative URLs for API
# Set to 'true' if frontend and backend are served from the same origin
# Set to 'false' if they're on different domains
VITE_USE_RELATIVE_API_URL=false

# Alternative: Explicit API base URL
# VITE_API_BASE_URL=http://localhost:3001

# Supabase Configuration (if using Supabase)
# VITE_SUPABASE_URL=https://xxxxx.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key
